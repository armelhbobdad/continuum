{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "continuum",
  "version": "0.1.0",
  "identifier": "com.continuum.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": {
      "linux": "./scripts/build-desktop.sh",
      "macos": "./scripts/build-desktop.sh",
      "windows": "powershell.exe -ExecutionPolicy Bypass -File scripts\\build-desktop.ps1"
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "continuum",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
